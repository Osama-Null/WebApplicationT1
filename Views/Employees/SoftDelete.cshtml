@model Employee
@{
	ViewData["Title"] = "SoftDelete";
}

<h1 class="text-center">SoftDelete</h1>
<form asp-action="SoftDelete" asp-controller="Employees" method="post">
	@Html.HiddenFor(x => x.EmployeeId)
	<div tabindex="-1">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Confirmation</h5>
				</div>
				<div class="modal-body d-flex justify-content-between align-items-center">
					<p class="me-3 mb-0">Are you sure you want to soft delete?</p>
					<div class="form-check form-switch text-end">
						<input asp-for="IsDeleted" class="form-check-input btn-lg" type="checkbox" id="flexSwitchCheckDefault" default>
					</div>
				</div>
				<div class="modal-footer">
					<input type="submit" value="Save" class="btn btn-success" />
					<a asp-action="Index" asp-controller="Employees" type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</a>
				</div>
			</div>
		</div>
	</div>
</form>